<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="vertical"
    tools:context=".Chon_linh_vuc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00e3fe"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                tools:text="player001" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/red_heart" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/red_heart" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/red_heart" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/red_heart" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="20dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/red_heart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/kim_cuong" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1000"
                android:textColor="#ffca18" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điểm: 0"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ed1b24"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi"
        android:textColor="#1bbfed"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="91dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="1"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn lĩnh vực:"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnlinhvuc1"
            android:layout_width="298dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="Khoa học kĩ thuật"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"

            />

        <Button
            android:id="@+id/btncredit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:text="Văn hóa - Nghệ thuật - Xã hội"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnbangxephang"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Lịch sử - Địa lý"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"  />

        <Button
            android:id="@+id/btntrochoimoi"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="7dp"
            android:text="Thể thao"
            android:background="@drawable/custom_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"  />


    </LinearLayout>

</LinearLayout>